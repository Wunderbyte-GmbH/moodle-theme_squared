<div class="search-wrapper inactive">
    <form action="{{{formaction}}}" method="get" class="search">
        <div id="search-trigger">
            <i class="open glyphicon glyphicon-search"></i>
            <i class="closed glyphicon glyphicon-remove"></i>
            <span class="sr-only">
            {{#str}} search {{/str}}
            </span>
        </div>
        <input type="text" placeholder="{{#str}}search {{/str}}" name="search"
            id="coursesearchbox" style="display: none;">
    </form>
</div>