{{!
    @template theme_squared/flat_navigation_content

    Display the flat navigation for the Squared theme

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * flatnavigation - array of flat_navigation_nodes
      * showdivider - boolean
      * action - string
      * isactive - boolean
      * get_indent - integer
      * is_section - boolean
      * text - HTML

    Example context (json):
    {
        "flatnavigation" : [
            {
                "showdivider": false,
                "action": "#",
                "isactive": true,
                "get_indent": 1,
                "is_section": false,
                "text": "First"
            },{
                "showdivider": true,
                "action": "#",
                "isactive": false,
                "get_indent": 0,
                "is_section": true,
                "text": "Last &amp; Second"
            }
        ]
    }
}}
<!-- <div class="block block_flat_navigation"> -->
    <nav class="list-group">
    {{# flatnavigation }}
        {{#showdivider}}
    </nav>
    <nav class="list-group m-t-1">
         {{/showdivider}}
         {{#action}}
         <a class="list-group-item list-group-item-action {{#isactive}}bold{{/isactive}}" href="{{{action}}}" data-key="{{key}}">
             <div class="m-l-{{get_indent}}">
                 {{#is_section}}
                     <div class="media">
                         <span class="media-left">
                             {{#pix}}i/folder{{/pix}}
                         </span>
                         <span class="media-body">{{{text}}}</span>
                     </div>
                 {{/is_section}}
                 {{^is_section}}
                     {{{text}}}
                 {{/is_section}}
             </div>
         </a>
         {{/action}}
         {{^action}}
         <div class="list-group-item" data-key="{{key}}">
             <div class="m-l-{{get_indent}}">
                 {{#is_section}}
                     {{#pix}}i/folder{{/pix}}
                 {{/is_section}}
                 {{{text}}}
             </div>
         </div>
         {{/action}}
     {{/ flatnavigation }}
     </nav>
<!-- </div> -->
